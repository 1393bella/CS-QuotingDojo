@using QuotingDojo.Models;
@model QuoteModel;

@{
    ViewData["Title"] = "Quoting Dojo";
}
<h1 class="p-3">Add a quote:</h1>
<form asp-action="Create" asp-controller="Home" method="post">
  <div class="form-group row">
    <label asp-for="Name" class="col-sm-3 ml-3 text-right"></label>
    <div class="col-sm-8">
      <input asp-for="Name" class="form-control">
      <span asp-validation-for="Name" style="font-size:medium;color:red;"></span>
    </div>
  </div>
  <div class="form-group row">
    <label asp-for="QuoteBody" class="col-sm-3 ml-3 text-right"></label>
    <div class="col-sm-8">
      <textarea asp-for="QuoteBody" class="form-control" rows="3"></textarea>
      <span asp-validation-for="QuoteBody" style="font-size:medium;color:red;"></span>
    </div>
  </div>
  <div class="form-group row">
    <label class="col-sm-3 ml-3 text-right"></label>
    <div class="col-sm-8 text-right">
      <button type="submit" class="btn btn-primary btn-lg mr-2">Submit.</button>
      <a href="Quotes" class="btn btn-primary btn-lg" role="button">Skip to Quotes.</a>
    </div>
  </div>
</form>